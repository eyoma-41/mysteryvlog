  <script>
// ---- Settings ---------------------------------------------------------
// 기본 이동 경로 (인트로 페이지 뒤로 넘어갈 실제 메인 페이지로)
const NEXT_PATH = new URLSearchParams(location.search).get('next') || 'index.html';

    // ---- Theme toggle -----------------------------------------------------
    const themeBtn = document.getElementById('themeBtn');
    const saved = localStorage.getItem('eyoma-theme');
    if(saved) document.documentElement.setAttribute('data-theme', saved);
    themeBtn.addEventListener('click', ()=>{
      const cur = document.documentElement.getAttribute('data-theme') === 'dark' ? 'light' : 'dark';
      document.documentElement.setAttribute('data-theme', cur);
      localStorage.setItem('eyoma-theme', cur);
    });

    // ---- Enter navigation -------------------------------------------------
    const page = document.getElementById('page');
    const goNext = (href)=>{
      page.classList.add('out');
      setTimeout(()=>{ location.href = href || NEXT_PATH; }, 320);
    };

    const enterBtn = document.getElementById('enterBtn');
    const enterBtnTop = document.getElementById('enterBtnTop');
    enterBtn.addEventListener('click', ()=> goNext());
    enterBtnTop.addEventListener('click', ()=> goNext());
    document.addEventListener('keydown', (e)=>{ if(e.key === 'Enter') goNext(); });

    // Quick nav cards
    document.querySelectorAll('.card[data-jump]').forEach(card=>{
      card.addEventListener('click', (e)=>{ e.preventDefault(); goNext(card.dataset.jump); });
    });

    // About: 간단한 안내 모달 대체 알럿
    document.getElementById('aboutBtn').addEventListener('click', ()=>{
      alert('《미스터리 브이로그》의 메타 공간입니다. 대시보드에서 전체 맵을 보고, Behind/Meme/Revenue로 이동하세요.');
    });

    // Copy URL helper
    document.getElementById('copyUrl').addEventListener('click', (e)=>{
      e.preventDefault();
      navigator.clipboard.writeText(location.href).then(()=>{
        const hint = document.getElementById('hint');
        hint.textContent = 'URL Copied';
        setTimeout(()=> hint.textContent = 'Press Enter', 1200);
      });
    });
  </script>
  <script>
    // Enter 버튼 클릭 시 index.html로 돌아가기
    document.getElementById('enterBtn').addEventListener('click', ()=>{
      window.location.href = 'index.html';
    });
  </script>
